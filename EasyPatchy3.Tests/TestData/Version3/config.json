{
  "version": "2.0.0",
  "database": {
    "host": "localhost",
    "port": 5432,
    "name": "myapp",
    "poolSize": 20,
    "readReplicas": ["replica1", "replica2"]
  },
  "features": {
    "login": true,
    "userManagement": true,
    "reporting": true,
    "analytics": true,
    "apiGateway": true
  },
  "security": {
    "sessionTimeout": 7200,
    "encryptionEnabled": true,
    "mfaEnabled": true
  },
  "performance": {
    "cacheEnabled": true,
    "compressionLevel": 6
  }
}